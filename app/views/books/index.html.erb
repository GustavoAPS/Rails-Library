<h1>Index of books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Description</th>
      <th colspan='3'>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= book.description %></td>
      <td><%= button_to 'Show', book_path(book.id), method: :get %></td>
      <td><%= button_to 'Edit', edit_book_path(book.id), method: :get %></td>
      <td><%= button_to 'Delete', book_path(book.id), method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= button_to 'New Book', new_book_path(), method: :get %>